<h2 class="text-center mb-4">新規登録</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <!-- Name Field -->
        <div class="form-group">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <!-- Specify Field -->
        <div class="form-group">
          <%= f.label :specify_field, class: "form-label" %>
          <%= f.text_field :specify_field, class: "form-control" %>
        </div>

        <!-- Email Field -->
        <div class="form-group">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <!-- Password Field -->
        <div class="form-group">
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">
              (<%= @minimum_password_length %> characters minimum)
            </small>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="form-group">
          <%= f.label :"パスワード確認", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Submit Button -->
        <div class="form-group text-center">
          <%= f.submit "新規登録", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
