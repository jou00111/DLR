<div class="container">
  <div class="row">
    <div class="col-md-2">
      <h4 class="font-weight-bold my-4 bg-light">投稿一覧</h4>
    </div>
    <div class="col-md-7 offset-md-1"></div>

  <div class="row">
    <div class="col">

      <table class='table mx-auto my-5 w-75'>
        <thead>
          <tr class="bg-light">
            <th>ID</th>
            <th>投稿者名</th>
            <th>題名</th>
            <th>本文</th>
          </tr>
        </thead>

        <% posts.each do |post| %>

        <tbody>
          <tr>
            <td><%= post.id %></td>
            <td><%= link_to post_path(post.id) do %>
                <%= post.user.name %>
                <% end %></td>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
          </tr>
        </tbody>

        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
