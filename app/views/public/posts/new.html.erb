<div class="container">
  <div class="row">
    <div class="col-mg-2">
      <h4 class="font-weight-bold my-4 bg-light">商品新規登録</h4>
    </div>
  </div>

  <div class="row">
    <div class="col">

      <%= form_with model: @post, url: posts_path do |f| %>

        <table class='mx-auto'>
          <tr>
            <td>画像投稿</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>題名</td>
            <td><%= f.text_field :title %></td>
          </tr>
          <tr>
            <td>本文</td>
            <td><%= f.text_area :body %></td>
          </tr>
            <td>公開ステータス</td>
            <td>
              <div class="custom-control custom-radio custom-control-inline">
                <%= f.radio_button :is_active, :true %>
                <%= f.label :is_active, '公開', for: 'is_active-on-public' %>
              </div>
              <div class="custom-control custom-radio custom-control-inline">
                <%= f.radio_button :is_active, :false %>
                <%= f.label :is_active, '非公開', for: 'is_active-off-public' %>
              </div>
            </td>
          </tr>
        </table>

          <div class="text-center"><%= f.submit '新規登録',class: "btn btn-success" %></div>

      <% end %>

    </div>
  </div>
</div>

