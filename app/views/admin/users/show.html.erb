<div class="container">
    <div class="row mb-5">
        <div class="col text-center">
          <h2></h2>
          <div class="profile-image">
           <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image, class: "img-fluid w-100", alt: "プロフィール画像" %>
            <% else %>
              <%= image_tag asset_path('default_profile.jpg'), class: "img-fluid w-100", alt: "デフォルトプロフィール画像" %>
            <% end %>
        　</div>
        </div>
　　</div>
    <div class="row">
        <div class="col mx-auto">
            <h2><%= @user.name %>さんのマイページ</h2>
            <p>氏名</p>
            <p><%= @user.name %></p>
            <p>紹介文</p>
            <p><%= @user.introduction %></p>
            <p>得意分野</p>
            <p><%= @user.specify_field %></p>
            <%=link_to "一覧へ", admin_users_path, class:"btn btn-primary w-25" %>
            <%=link_to "編集する", edit_admin_user_path, class:"btn btn-success w-25 ml-2" %>
        </div>
    </div>    
    <div class="row">    
        <%= render 'admin/users/post_index', posts: @posts %>
    </div>    
</div>    