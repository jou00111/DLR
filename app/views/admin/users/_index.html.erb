<div class="container my-5">
  <div class="row">
    <div class="col-md-2">
      <h4 class="font-weight-bold py-3 text-center bg-light">ユーザー一覧</h4>
    </div>
    <div class="col-md-7 offset-md-1"></div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table table-striped table-bordered mx-auto my-5 w-75 text-center">
        <thead class="thead-light">
          <tr>
            <th>ID</th>
            <th>投稿者名</th>
            <th>得意分野</th>
            <th>本文</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.name, admin_user_path(user.id), class: "text-decoration-none" %></td>
              <td><%= user.specify_field %></td>
              <td><%= user.introduction %></td>
              <td class="<%= user.is_active? ? 'text-success font-weight-bold' : 'text-muted font-weight-bold' %> "><%= user.user_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
